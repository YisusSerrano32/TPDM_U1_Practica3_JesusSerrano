<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#646464"
    android:padding="15dp"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/etiqueta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="#NomerepruebesBenigno"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etiqueta1"
        android:layout_centerHorizontal="true"
        android:text="Practica relative layout con otras personas"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/circulo1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/circulo1" />

    <ImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/circulo2" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="210dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/circulo3" />

    <ImageView
        android:id="@+id/circulo4"
        android:layout_width="1200dp"
        android:layout_height="120dp"
        android:layout_below="@id/circulo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/circulo4" />

    <Button
        android:id="@+id/boton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/circulo4"
        android:layout_marginTop="5dp"
        android:background="#2A9BFF"
        android:padding="15dp"
        android:text="Encontrar un club" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boton1"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Crear club" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boton1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Codigo de club" />

    <ImageView
        android:id="@+id/pan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/pan" />

    <ImageView
        android:id="@+id/manzana"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/pan"
        android:src="@drawable/manzana" />

    <ImageView
        android:id="@+id/nino"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/manzana"
        android:src="@drawable/nino" />

    <ImageView
        android:id="@+id/agua"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/nino"
        android:src="@drawable/agua" />/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/agua"
        android:src="@drawable/numero" />

</RelativeLayout>